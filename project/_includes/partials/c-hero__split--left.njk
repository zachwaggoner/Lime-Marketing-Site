<div class="relative">
    <div class="flex flex-row-reverse items-center relative overflow-hidden h-screen">
        <div class="relative z-10 lg:max-w-2xl lg:w-full">
        <main class="pr-20">
            <div class="sm:text-center lg:text-left">
            <h1 class="text-4xl font-display tracking-tight text-black sm:text-5xl md:text-6xl">
                <span class="block xl:inline">{{headline}}</span>
            </h1>
            <p class="mt-3 font-body font-display text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                {{subheadline}}
            </p>
            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                <div class="rounded-md shadow">
                <a href="{{primaryBtnUrl}}" class="w-full font-display flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full bg-primary hover:bg-primary md:py-4 md:text-lg md:px-10">
                    {{primaryBtnText}}
                </a>
                </div>
                <div class="mt-3 sm:mt-0 sm:ml-3">
                <a href="{{secondaryBtnUrl}}" class="w-full font-display flex items-center justify-center px-8 py-3 border border-transparent font-medium rounded-full bg-black text-white hover:bg-black md:py-4 md:text-lg md:px-10">
                    {{secondaryBtnText}}
                </a>
                </div>
            </div>
            </div>
        </main>
        </div>
    </div>
    <div class="lg:absolute lg:inset-y-0 lg:left-0 lg:w-1/2">
        <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="{{heroImage}}" alt="{{alt}}">
    </div>
</div>